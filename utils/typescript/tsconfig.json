{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "/*": [
        "./dist/*"
      ],
      "@build/*": [
        "./src/build/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
    },
    "baseUrl": ".",
  },
  "include": [
    "src",
    "src/typings/*"
  ]
}