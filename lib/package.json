{
  "name": "blakprint",
  "version": "10.0.3",
  "private": false,
  "homepage": "https://github.com/desirablesolutions/blakprint#readme",
  "description": "üìê an editor & workbox of reusable, composable, model, view, and controller modules for architecting web projects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/desirablesolutions/blakprint.git"
  },

  "license": "GPL-3.0-or-later",
  "outDir": "dist",
  "author": "Jeffrey Desir <jeffrey@desir.tech>",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./typings": "./dist/typings/index.d.ts"
  },
  "bin": {
    "blakprint": "./bin/index.js"
  },
  

  "funding": [
    {
      "type": "kofi",
      "url": "https://kofi.com/desirablesolutions"
    }
  ],
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/desirablesolutions/blakprint/issues",
    "email": "jeffrey@desir.tech"
  },
  "scripts": {
    "build": "npx tsup src --dts-resolve  && npx shx cp package.json dist && npx shx cp tsconfig.json dist",
    "build:fast": "tsup src",
    "link" : "tsc && copy /Y package.json dist && copy /Y readme.md dist && copy /Y * dist && cd dist && npm link",
    "publish": "npm run node:publish",
    "dev": "tsup src --watch",
    "readme:g": "npx @appnest/readme generate --config=docs.config.json",
    "node:publish": "npm publish --access=public",
    "test": "vitest",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "desirable-solutions",
    "mvc",
    "typescript",
    "library",
    "meta-framework"
  ],
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@types/yargs": "^17.0.22",
    "@vitest/coverage-c8": "^0.24.5",
    "happy-dom": "^6.0.4",
    "shx": "^0.3.4",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.8"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "@types/react": "^18.0.37",
    "boxen": "^7.0.2",
    "chalk": "^5.2.0",
    "g": "^2.0.1",
    "link-module-alias": "^1.2.0",
    "listr": "^0.14.3",
    "make-dir": "^3.1.0",
    "meta-types": "^2.0.0",
    "module-alias": "^2.2.2",
    "nanostores": "^0.7.4",
    "ora": "^6.1.2",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "tsconfig-paths": "^4.2.0",
    "yargs": "^17.7.1"
  }
}
