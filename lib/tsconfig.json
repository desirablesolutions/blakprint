{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@utils/*":[
        "./src/utils/*"
      ],
      "@typings/*":[
        "./src/typings/*"
      ],
      "src/views/*": [
        "./src/views/*"
      ],

    },
    "baseUrl": ".",
  },
  "include": [
    "src",
  ]
}