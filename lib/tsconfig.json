{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "./*": ["./dist/*"],
      "@build/*": ["./build/*"],
      "@assets/*": ["./assets/*"],
    },
    "baseUrl": ".",
  },
  "include": [
    "src"
  ]
}